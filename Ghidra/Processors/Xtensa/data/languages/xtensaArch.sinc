    n_op_t      = (4,7)
    n_op_s_3    = (11,11)
    n_op_s_2_2  = (10,11)
    n_op_s      = (8,11)
    n_op_s_0_3  = (8,10)
    ri6_i6_4_2  = (8,9)
;


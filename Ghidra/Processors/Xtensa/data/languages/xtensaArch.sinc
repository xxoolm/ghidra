    op2_0       = (0,0)
    ri8_i8      = (0,7)
    ri8_si8     = (0,7) signed
    bri12_i12   = (0,11)
    bri12_si12  = (0,11) signed
    ri16_i16    = (0,15)
    call_o18    = (0,17) signed
    op1_1_3     = (5,7)
    op1_0       = (4,4)
